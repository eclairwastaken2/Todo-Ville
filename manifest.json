{
    "manifest_version": 3,
    "name": "Todo Ville",
    "version": "1.0",
    "icons": {
        "16": "icons/icons.png",
        "48": "icons/icons.png",
        "128": "icons/icons.png"
    },
    "description": "To do list gamified.",
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webNavigation", 
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}